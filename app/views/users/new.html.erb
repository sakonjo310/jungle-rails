<div class="signup-container">
  <h1 class="signup">Signup</h1>
  <br>
  <%= form_for @user, :html => {:class => "signup-form"}, url: '/users' do |f| %>
    <% if f.object.errors.any? %>
      <div class="alert alert-danger">
        <strong>The following errors occured:</strong>
        <ul>
          <% f.object.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.text_field :first_name, class: 'form-control signup', placeholder: "First Name" %>
    </div>
    <div class="form-group">
      <%= f.text_field :last_name, class: 'form-control signup', placeholder: "Last Name" %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, class: 'form-control signup', type: "email", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control signup', type: "password", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control signup', type: "password", placeholder: "Confirm Password" %>
    </div>

    <%= f.submit "Submit", class: 'btn btn-primary' %>

  <% end %>
</div>